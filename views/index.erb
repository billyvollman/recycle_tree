var homeOptionBtn = document.querySelectorAll('.home-option-btn')


var handleClick = function(evet){
    var homeOptionBtn = event.target

    if (homeOptionBtn.textContent === "GIVE") {
        var findSearchOption = document.querySelector('.find')
        findSearchOption.style.display = "none"
        var disposeSearchOption = document.querySelector('.dispose')
        disposeSearchOption.style.display = "none"
        var allIconHome = document.querySelector('.all-home-icons')
        allIconHome.style.display = "none"
        var giveSearchOption = document.querySelector('.give')
        if (giveSearchOption.style.display === "") {
        giveSearchOption.style.display = "block"
        } else if (giveSearchOption.style.display === "block") {
        giveSearchOption.style.display = "none"
        } else if (giveSearchOption.style.display === "none") {
        giveSearchOption.style.display = "block"
        }
  
    }

    if (homeOptionBtn.textContent === "FIND") {
        var giveSearchOption = document.querySelector('.give')
        giveSearchOption.style.display = "none"
        var disposeSearchOption = document.querySelector('.dispose')
        disposeSearchOption.style.display = "none"
        var findSearchOption = document.querySelector('.find')
        var allIconHome = document.querySelector('.all-home-icons')
        if (findSearchOption.style.display === "") {
        findSearchOption.style.display = "block"
        allIconHome.style.display = "block"
        } else if (findSearchOption.style.display === "block") {
        findSearchOption.style.display = "none"
        allIconHome.style.display = "none"
        } else if (findSearchOption.style.display === "none") {
        findSearchOption.style.display = "block"
        allIconHome.style.display = "block"
        }
    
    }

    if (homeOptionBtn.textContent === "DISPOSE") {
        var giveSearchOption = document.querySelector('.give')
        giveSearchOption.style.display = "none"
        var findSearchOption = document.querySelector('.find')
        findSearchOption.style.display = "none"
        var allIconHome = document.querySelector('.all-home-icons')
        allIconHome.style.display = "none"
        var disposeSearchOption = document.querySelector('.dispose')
        if (disposeSearchOption.style.display === "") {
        disposeSearchOption.style.display = "block"
        } else if (disposeSearchOption.style.display === "block") {
        disposeSearchOption.style.display = "none"
        } else if (disposeSearchOption.style.display === "none") {
        disposeSearchOption.style.display = "block"
        }
    }
   
}

homeOptionBtn.forEach(function(optionBtn) {
    optionBtn.addEventListener('click', handleClick)
})
</script>
